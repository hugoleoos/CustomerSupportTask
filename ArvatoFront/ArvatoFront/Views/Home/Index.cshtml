@using static ArvatoFront.Models.CustomerSupportViewModel
@model CustomerSupportViewModel
@{
    ViewData["Title"] = "Create Customer Support";
}

<div class="text-center">
    <h1 class="display-4">Create Customer Support</h1>
    <form asp-action"Index" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName">First name:</label>
                <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="Hugo">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName">Last name</label>
                <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="Leonardo">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="example@gmail.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" type="text" class="form-control" id="phone" placeholder="(00) 00000-0000">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Number">Number</label>
                <input asp-for="Number" type="number" class="form-control" id="number" placeholder="0123">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Inquiry">Type Of Inquiry</label>
                <select asp-for="Inquiry" asp-items="Html.GetEnumSelectList<EInquiry>()"  id="typeOfInquiry" class="form-control">
                    <option selected>Choose...</option>
                </select>
                <span asp-validation-for="Inquiry" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="DescriptionSupport">Description of the support issue</label>
                <textarea asp-for="DescriptionSupport" class="form-control" id="description" rows="3"></textarea>
                <span asp-validation-for="DescriptionSupport" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="agreeingTerms" asp-for="Aggreement">
                    <label class="form-check-label" asp-for="Aggreement">
                        Agreeing to the terms
                    </label>                    
                    <span asp-validation-for="Aggreement" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
